{
  "name": "@uongsuadaubung/text-editor",
  "version": "0.6.41",
  "description": "Test Text Editor",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "exports": {
    ".": {
      "import": "./lib/module/index",
      "require": "./lib/commonjs/index",
      "types": "./lib/typescript/src/index.d.ts"
    },
    "./web": {
      "import": "./lib-web/index.mjs",
      "require": "./lib-web/index.umd.cjs",
      "types": "./lib-web/typescript/webEditorUtils/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "lib-web",
    "scripts",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "editor:dev": "vite",
    "editor:build": "vite build && node ./scripts/buildEditor.js ./src/simpleWebEditor/build/index.html",
    "editor:build-web-utils": "rimraf lib-web && vite build --config ./src/webEditorUtils/vite.config.ts && tsc --project ./src/webEditorUtils",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it --no-git",
    "patch": "release-it patch --no-git"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://uongsuadaubung/10tap-editor.git"
  },
  "author": "uongsuadaubung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uongsuadaubung/10tap-editor/issues"
  },
  "homepage": "https://github.com/uongsuadaubung/10tap-editor#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.8.1",
    "@evilmartians/lefthook": "^1.7.9",
    "@react-native/eslint-config": "^0.72.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^28.1.8",
    "@types/lodash": "^4.17.7",
    "@types/react": "~17.0.21",
    "@types/react-dom": "^18.3.0",
    "@types/react-native": "0.70.0",
    "@vitejs/plugin-react": "^4.3.1",
    "commitlint": "^17.8.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "pod-install": "^0.1.39",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-native": "^0.73.9",
    "react-native-builder-bob": "^0.20.4",
    "react-native-webview": "^13.10.5",
    "release-it": "^15.11.0",
    "rimraf": "^5.0.9",
    "turbo": "^1.13.4",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-singlefile": "^1.0.0"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-webview": "*"
  },
  "packageManager": "npm@10.8.2+sha512.c7f0088c520a46596b85c6f8f1da943400199748a0f7ea8cb8df75469668dc26f6fb3ba26df87e2884a5ebe91557292d0f3db7d0929cdb4f14910c3032ac81fb",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version} [skip ci]",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNTenTapViewSpec",
    "type": "components",
    "jsSrcsDir": "src"
  },
  "dependencies": {
    "@tiptap/extension-blockquote": "^2.5.7",
    "@tiptap/extension-bold": "^2.5.7",
    "@tiptap/extension-bubble-menu": "^2.5.7",
    "@tiptap/extension-bullet-list": "^2.5.7",
    "@tiptap/extension-code": "^2.5.7",
    "@tiptap/extension-code-block": "^2.5.7",
    "@tiptap/extension-code-block-lowlight": "^2.5.7",
    "@tiptap/extension-color": "^2.5.7",
    "@tiptap/extension-document": "^2.5.7",
    "@tiptap/extension-dropcursor": "^2.5.7",
    "@tiptap/extension-font-family": "^2.5.7",
    "@tiptap/extension-hard-break": "^2.5.7",
    "@tiptap/extension-heading": "^2.5.7",
    "@tiptap/extension-highlight": "^2.5.7",
    "@tiptap/extension-history": "^2.5.7",
    "@tiptap/extension-horizontal-rule": "^2.5.7",
    "@tiptap/extension-image": "^2.5.7",
    "@tiptap/extension-italic": "^2.5.7",
    "@tiptap/extension-link": "^2.5.7",
    "@tiptap/extension-list-item": "^2.5.7",
    "@tiptap/extension-ordered-list": "^2.5.7",
    "@tiptap/extension-paragraph": "^2.5.7",
    "@tiptap/extension-placeholder": "^2.5.7",
    "@tiptap/extension-strike": "^2.5.7",
    "@tiptap/extension-table": "^2.5.7",
    "@tiptap/extension-table-cell": "^2.5.7",
    "@tiptap/extension-table-header": "^2.5.7",
    "@tiptap/extension-table-row": "^2.5.7",
    "@tiptap/extension-task-item": "^2.5.7",
    "@tiptap/extension-task-list": "^2.5.7",
    "@tiptap/extension-text": "^2.5.7",
    "@tiptap/extension-text-align": "^2.5.7",
    "@tiptap/extension-text-style": "^2.5.7",
    "@tiptap/extension-underline": "^2.5.7",
    "@tiptap/extension-youtube": "^2.5.7",
    "@tiptap/pm": "^2.5.7",
    "@tiptap/react": "^2.5.7",
    "@tiptap/starter-kit": "^2.5.7",
    "lodash": "^4.17.21",
    "lowlight": "^3.1.0",
    "react-dom": "18.2.0"
  }
}
